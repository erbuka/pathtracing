# GNU Make workspace makefile autogenerated by Premake

ifndef config
  config=debug
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),debug)
  Glad_config = debug
  GLFW_config = debug
  ImGui_config = debug
  Raytracing_config = debug
  RaytracingUtility_config = debug
  CLI_config = debug
  Sandbox_config = debug
endif
ifeq ($(config),release)
  Glad_config = release
  GLFW_config = release
  ImGui_config = release
  Raytracing_config = release
  RaytracingUtility_config = release
  CLI_config = release
  Sandbox_config = release
endif

PROJECTS := Glad GLFW ImGui Raytracing RaytracingUtility CLI Sandbox

.PHONY: all clean help $(PROJECTS) 

all: $(PROJECTS)

Glad:
ifneq (,$(Glad_config))
	@echo "==== Building Glad ($(Glad_config)) ===="
	@${MAKE} --no-print-directory -C . -f Glad.make config=$(Glad_config)
endif

GLFW:
ifneq (,$(GLFW_config))
	@echo "==== Building GLFW ($(GLFW_config)) ===="
	@${MAKE} --no-print-directory -C . -f GLFW.make config=$(GLFW_config)
endif

ImGui:
ifneq (,$(ImGui_config))
	@echo "==== Building ImGui ($(ImGui_config)) ===="
	@${MAKE} --no-print-directory -C . -f ImGui.make config=$(ImGui_config)
endif

Raytracing:
ifneq (,$(Raytracing_config))
	@echo "==== Building Raytracing ($(Raytracing_config)) ===="
	@${MAKE} --no-print-directory -C . -f Raytracing.make config=$(Raytracing_config)
endif

RaytracingUtility: Raytracing
ifneq (,$(RaytracingUtility_config))
	@echo "==== Building RaytracingUtility ($(RaytracingUtility_config)) ===="
	@${MAKE} --no-print-directory -C . -f RaytracingUtility.make config=$(RaytracingUtility_config)
endif

CLI: Raytracing RaytracingUtility
ifneq (,$(CLI_config))
	@echo "==== Building CLI ($(CLI_config)) ===="
	@${MAKE} --no-print-directory -C . -f CLI.make config=$(CLI_config)
endif

Sandbox: Glad GLFW ImGui Raytracing RaytracingUtility
ifneq (,$(Sandbox_config))
	@echo "==== Building Sandbox ($(Sandbox_config)) ===="
	@${MAKE} --no-print-directory -C . -f Sandbox.make config=$(Sandbox_config)
endif

clean:
	@${MAKE} --no-print-directory -C . -f Glad.make clean
	@${MAKE} --no-print-directory -C . -f GLFW.make clean
	@${MAKE} --no-print-directory -C . -f ImGui.make clean
	@${MAKE} --no-print-directory -C . -f Raytracing.make clean
	@${MAKE} --no-print-directory -C . -f RaytracingUtility.make clean
	@${MAKE} --no-print-directory -C . -f CLI.make clean
	@${MAKE} --no-print-directory -C . -f Sandbox.make clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "  debug"
	@echo "  release"
	@echo ""
